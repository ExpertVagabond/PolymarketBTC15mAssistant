# PolymarketBTC15mAssistant — Environment Variables
# Copy this file to .env and fill in what you need.
# The base app (npm start) requires ZERO keys — all public APIs.

# ─── Polymarket Market Selection ───────────────────────────────
# Leave blank for auto-select (latest BTC 15m market)
POLYMARKET_SLUG=
POLYMARKET_SERIES_ID=10192
POLYMARKET_AUTO_SELECT_LATEST=true

# ─── Chainlink / Polygon RPC (optional, public default works) ──
# Free keys from Alchemy, Infura, or QuickNode for faster data
POLYGON_RPC_URL=
POLYGON_WSS_URL=
# Comma-separated fallback URLs
POLYGON_RPC_URLS=
POLYGON_WSS_URLS=

# ─── Alerts: Telegram ─────────────────────────────────────────
# 1. Message @BotFather on Telegram → /newbot → copy the token
# 2. Message @userinfobot to get your chat ID
ENABLE_ALERTS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ─── Alerts: Discord ──────────────────────────────────────────
# Server Settings → Integrations → Webhooks → New Webhook → Copy URL
DISCORD_WEBHOOK_URL=

# ─── Alert Tuning ─────────────────────────────────────────────
ALERT_TA_THRESHOLD=0.7
ALERT_COOLDOWN_MS=900000

# ─── Web Dashboard ────────────────────────────────────────────
WEB_PORT=3000

# ─── Trading Bot (DRY RUN by default) ─────────────────────────
# ⚠️  Live trading requires ALL FOUR Polymarket credentials below
# ⚠️  AND both ENABLE_TRADING=true AND TRADING_DRY_RUN=false
ENABLE_TRADING=false
TRADING_DRY_RUN=true

# Get these from your Polymarket account settings
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=
# Your wallet private key (the one connected to Polymarket)
POLYMARKET_PRIVATE_KEY=

# ─── Risk Management ──────────────────────────────────────────
MAX_BET_USD=1
DAILY_LOSS_LIMIT_USD=10
MAX_OPEN_POSITIONS=3

# ─── Proxy (optional) ─────────────────────────────────────────
# HTTP_PROXY=http://user:pass@host:port
# SOCKS_PROXY=socks5://user:pass@host:port

# ═══════════════════════════════════════════════════════════════
# SUBSCRIPTION SERVICE (npm run start:server)
# ═══════════════════════════════════════════════════════════════

# ─── Multi-Market Scanner ────────────────────────────────────
SCANNER_POLL_INTERVAL_MS=30000
SCANNER_MAX_MARKETS=50
SCANNER_MIN_LIQUIDITY=100
# Comma-separated: crypto,politics,sports,esports,tennis,weather,economics,other
# Leave empty to scan ALL categories
SCANNER_CATEGORIES=

# ─── Stripe Billing ─────────────────────────────────────────
# Get these from https://dashboard.stripe.com
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Price IDs from Stripe Products
STRIPE_PRICE_BASIC=
STRIPE_PRICE_PRO=

# ─── Telegram Bot (subscription mode) ───────────────────────
# Same TELEGRAM_BOT_TOKEN as above
TELEGRAM_PRIVATE_CHANNEL_ID=
TELEGRAM_PUBLIC_CHANNEL_ID=

# ─── Discord Bot (subscription mode) ────────────────────────
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=
DISCORD_PREMIUM_ROLE_ID=
DISCORD_FREE_CHANNEL_ID=
DISCORD_PREMIUM_CHANNEL_ID=

# ─── Web Auth ───────────────────────────────────────────────
# Resend.com API key for magic link emails
RESEND_API_KEY=
FROM_EMAIL=signals@yourdomain.com
APP_URL=http://localhost:3000
JWT_SECRET=change-me-in-production

# ─── Database ───────────────────────────────────────────────
SUBSCRIBER_DB_PATH=./data/subscribers.db
